<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config />
    <context:component-scan base-package="com.gooday.hrcn.common"/>
    <bean name="cacheBean" class="cn.gooday.hrcn.common.cache.impl.MemoryCache"></bean>
    <bean name="eventManagerBean" class="cn.gooday.hrcn.common.event.manager.EventManager"></bean>
    <bean name="collectHandlerBean" class="cn.gooday.hrcn.collect.handler.CollectEventHandler">
        <property name="ICache" ref="cacheBean"></property>
    </bean>

    <bean name="fileCollector" class="cn.gooday.hrcn.collect.thread.FileLogCollectThread">
        <property name="ICache" ref="cacheBean"></property>
        <property name="eventManager" ref="eventManagerBean"></property>
    </bean>
</beans>